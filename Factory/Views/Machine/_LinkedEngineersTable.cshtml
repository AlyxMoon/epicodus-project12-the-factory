@using Factory.Models
@model System.Collections.Generic.List<Engineer>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Engineer Name</th>
    </tr>
  </thead>
  <tbody>
    @if (Model.Count == 0)
    {
      <tr><td colspan="5">No Engineers</td></tr>
    }

    @foreach (Engineer engineer in Model)
    {
      <tr>
        <td>
          <a
            asp-controller="Engineer"
            asp-action="Details"
            asp-route-machineId="@engineer.EngineerId"
            class="btn btn-secondary btn-sm"
          >See Details</a>
          <a
            asp-controller="Machine"
            asp-action="RemoveEngineer"
            asp-route-engineerId="@engineer.EngineerId"
            asp-route-machineId="@ViewBag.MachineId"
            class="btn btn-danger btn-sm"
          >Remove Engineer</a>
        </td>
        <td>@engineer.Name</td>
      </tr>
    }
  </tbody>
</table>